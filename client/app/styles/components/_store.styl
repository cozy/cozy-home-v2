// MARKET PAGE

#your-app
    box-sizing border-box
    width 100%
    padding 2em 1em
    margin-top 3em
    border-top 1px solid grey-03

    p
        margin-bottom 0
        font-size (18/16)em

        &.more
            color grey-06
            font-style italic


    .add-app-field
        max-width 800px

        #app-git-field
            box-sizing border-box
            width 100%
            text-align left

    .error
        box-sizing border-box
        width 100%
        max-width 615px
        margin-top 10px
        font-size 0.8em
        padding 5px

#app-market-list
    box-sizing border-box

    .app-install-button
        button
        div
            display inline

        .app-text
            padding 10px
            word-wrap normal
            overflow-x hidden

        .app-text p
            margin-right 20px


#market-view
    height 100%

#market-applications-list
    display         flex
    flex-wrap       wrap
    justify-content space-around

#market-view #no-app-message
.cozy-app
    display flex
    align-items center
    @media (max-width (400/16)em)
        flex-direction column
    box-sizing border-box
    width 32%
    @media (max-width (1280/16)em)
        width 49%
    @media (max-width (768/16)em)
        width 100%
    margin-bottom 1em
    padding 1.5em

    background white
    border 1px solid grey-03
    border-radius 4px
    cursor pointer

    text-align left

    transition all 0.2s ease-out

    &:hover
        transform scale(1.05)
        box-shadow 0 4px 12px rgba(0,0,0,.2)
        z-index 100

    &.official
        border-color blue + 20%

        .comment
            color blue

    &.install
        .app-text
            opacity 0.5

        .installing-label
            display block
            color grey-04
            font-style italic

    .installing-label
        display none
        margin-bottom 10px

    h3
        margin         0
        padding-bottom 0
        font-size      (22/16)em
        line-height    (36/16)rem

        span.beta
            margin-left      0.8em
            padding          0.2em 0.5em
            background-color red
            border-radius    10em
            vertical-align   middle
            color            #fff
            font-size        (13/22)em
            font-style       italic
            font-weight      normal

    .app-text
        padding-left 1em

    .comment
        font-size  1em
        font-style italic
        color      grey-05

    p
        margin 0.25em 0 0.5em
        line-height 1.25em

    .app-img
        flex none
        box-sizing border-box
        width (120/16)em
        height (120/16)em
        text-align center
        vertical-align center

        @media (max-width (580/16)em)
            width (80/16)em
            height (80/16)em

        img.svg
            width 100%
            height 100%
            display block
            margin 0
            background-position center
            border-radius 999em

#no-app-message
    margin auto
    margin-top 30px
    width 80%
    background white
    border-bottom-left-radius 5px
    border-bottom-right-radius 5px
    padding-bottom 20px

    #start-title
        padding 20px
        font-size 28px
        margin-bottom 30px

        img
            float left

    p
        padding-left 20px
        padding-right 20px

    img
        width 32px
        margin-right 10px

    img.logo
        width auto

    a
        border-bottom 0


