blue = #15a7c7
//blue = #747089
darkblue = #363a46
darkred = #C66666
darkgreen = #66C666
orange = #C60 + 20%
orangewhite = #fcf9f5
lightgrey = #f7f4f0
lightred = #fff4f0
lightgreyblue = #f0f4f7
lightgreyred = #f0fcfc

html
    height 100%
    padding 0
    margin 0

body
    height 100%
    padding 0
    margin 0
    background-color: orangewhite
    box-sizing: border-box
    min-width: 320px
    color: black
    font-family: 'Source Sans Pro', sans-serif
    font-size: 18px

a
    color: blue
    text-decoration: none

a:hover
    color: orange

iframe
    width 100%
    height 100%
    border 0

input
select
    background: white
    font-family: 'Maven Pro', sans-serif
    text-align: center
    font-size: 30px
    height: 60px
    width: 550px
    padding: 10px
    border-radius: 0.4em
    border: 0
    color: blue
    box-shadow: 0 0 0 0
    border: 1px solid white
    transition: all 0.2s

input:hover
select:hover
    border: 1px solid blue

input:focus
select:focus
    color: orange
    box-shadow: 0 0 0 0
    border: 1px solid orange + 50%

.w500
    max-width: 500px

.w600
    max-width: 600px
    margin: auto

.w800
    max-width: 800px
    margin: auto

.tooltip-inner
.tooltip-inner
    a:hover
        color: textcolor
        text-decoration: none
.ma2
    margin: 20px

.pa2
    padding: 20px

.par2
    padding-right: 20px

.mt6
    margin-top: 60px

.spacer
.spacer
    clear both

.close
    float right

.hidden
    display: none

.center
    text-align center

.btn
    background: blue
    border: 1px blue - 20%
    margin: 0
    font-family: 'Source Sans Pro', sans-serif
    color: white
    padding: 5px
    border-radius: 4px
    cursor: pointer
    transition: all 0.3s

.btn:hover
    color: white
    background: orange
    border-color: 1px solid orange
    color: white

.btn:active
    box-shadow: 1px 3px 2px rgba(0, 0, 0, 0.2) inset, 0 0 0
    background: orange - 10%
    color: white

.green
    background: darkgreen

.red
    background: darkred

.lightgrey
    background: lightgrey

.alert-error
.alert-success
    display: none
    border-radius: 5px
    font-family: 'Maven Pro', sans-serif
    font-size: 20px
    padding: 20px
    color: white

.alert-error
    background: darkred

.alert-success
    background: darkgreen

.light-btn
    background: transparent
    margin: 0
    font-family: 'Source Sans Pro', sans-serif
    color: blue
    padding: 5px
    margin-right: 5px


input[type=checkbox]
    margin-top: 8px
    width: 15px
    height: 15px
