#app-list
    text-align: center
    margin auto
    margin-bottom: 40px

    .preview-holder
        padding 10px
        display: block
        list-style-type: none
        background-color: orange

    .widget-iframe, .widget-mask
        position absolute
        top 0px
        left 0px
        width 100%
        height 100%

    .widget-mask
        z-index 10
        background grey
        opacity 0.7

    .use-widget
        z-index 20
        position absolute
        bottom 10px
        right 10px


.application
    cursor pointer
    transition all 0.3s
    background lightgrey
    position relative

    .mask
    .bottom-handle
    .bottom-right-handle
    .right-hanldle
        display none

    .application-inner
        overflow hidden
        max-width 100%
        height 100%
        padding-top: 5px

        .vertical-aligner
            height 100%
            width 100%
            vertical-align middle

        &.widget
            height 100%
            top 0px
            bottom 0px

        img
            width 70%
            display block
            margin 0px auto 2% auto
            text-align center
            max-width: 100px
            max-height: 100px

            &.stopped
                opacity 0.5

        p
            margin: 0
            font-family: main
            color textcolor

        .app-title
            // line-height: 20%
            height 20%
            max-height 20px

            text-align center
            font-family: styled
            text-transform: uppercase
            font-size: 15px
            color: darkblue
            text-decoration: none

        .state-label
            font-size: 18px
            font-weight: normal
            color: red

    // resize mode
    &.ui-resizable:not(.ui-resizable-disabled)
        cursor move
        border 3px solid blue //#f7f4f0 - 15%

        .ui-resizable-e
            width 20px
            right -10px
            cursor col-resize

        .ui-resizable-s
            height 20px
            bottom -10px
            cursor row-resize

        .ui-resizable-se
            width 20px
            height 20px
            right -10px
            bottom -10px
            cursor nwse-resize

        .mask
            display block
            position absolute
            top 0px
            left 0px
            width 100%
            height 100%
            z-index 10
            background grey
            opacity 0.5

        .bottom-handle
        .bottom-right-handle
        .right-handle
            display block
            position absolute
            z-index 100
            width 10px
            height 10px
            background blue
            border 1px solid #fff

        .bottom-handle
            bottom -6.5px // border + height/2
            left 50%
        .bottom-right-handle
            bottom -6.5px
            right -6.5px
        .right-handle
            top 50%
            right -6.5px


    &:hover
        background: orangewhite - 10%
        .app-title
            color: orange - 50%

    &:active
        box-shadow none

    &.broken
        .broken-notifier
            display: block


