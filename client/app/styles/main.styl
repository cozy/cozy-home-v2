@import 'nib'
@import '_base'
@import '_help'

@import '_modal'
@import '_object-picker'


*
    outline none

.home-body
    width 100%
    height 100%
    padding 36px 0 0 0
    margin 0
    background bgcolor
    background #FDFDFD
    overflow hidden
    box-sizing border-box
    display: flex
    flex-direction: column
    justify-content: flex-start
    align-items: stretch

#app-frames
    height 100%

body
    box-sizing border-box

.navbar
    position fixed
    background darkgrey
    z-index 1500
    top 0
    width 100%
    height 36px
    padding 0


.back-button
    margin-left 15px
    margin-top .8rem

    font-family 'Maven Pro', sans-serif
    font-weight normal
    font-size .8em
    text-transform lowercase

    color white
    opacity 0.5
    transition opacity 0.2s ease

    &::before
        margin-right .5em
        vertical-align middle
        font-size 2rem

    &:hover
        color white
        opacity 1



/* content */

#content
    height 100%
    overflow auto
    transition 0.6s background-image ease-in-out
    background-position center center
    background-repeat no-repeat
    background-attachment fixed
    background-size cover


#home-content
    display flex
    min-height 100%

    section
        flex 1


.help-section
    .cover
        width 100%


.platform-section
    min-height 100%
    border-radius 0
    border-right 1px solid #DDD
    border-bottom 1px solid #DDD
    padding 20px
    background rgba(255, 255, 255, 0.95)

    .buttons
        button.btn
            display block
        .fa
            width 10px
            display inline

        span
            display inline
            width auto

/** Notifications */

#menu-applications-toggle
    height 36px
    color white
    font-family 'Maven Pro', sans-serif
    margin auto
    text-transform capitalize
    opacity 1

    span
        font-size 22px
        padding-top 5px

    #current-application
        cursor default
        font-size 18px
        opacity 0.8
        color white
        font-weight normal
        text-transform uppercase
        line-height 34px

#menu-applications-container
    margin auto
    max-width 300px
    text-align center
    height 30px


#notifications-toggle
    transition all 0.3s
    display block
    height 36px
    line-height 34px
    width auto
    cursor pointer
    margin 0 5px 0 0
    padding 0 10px
    width 36px
    height 36px

    i
        color blue
        transition color 0.2s ease

    &:hover
        i
            color orange

        #notifications-counter
            background orange

    #notifications-counter
        position absolute
        top 3px
        right 3px

        height 20px
        width 20px
        border-radius 50%
        line-height 17px
        font-size 15px

        text-align center
        background #338CF7
        color #fff
        border 2px solid #363a46
        transition background 0.2s ease

        &:empty
            padding 0


    .backcolor
        position absolute
        top 15px
        left 12px
        border-radius 10px
        z-index -1
        display block
        background-color white
        width 20px
        height 20px
        opacity 0
        transition all 0.3s


#notifications-toggle.highlight
    img
        opacity 1

.active
    #notifications-toggle
        background rgba(20, 20, 22, 0.3)
        margin-top 0
        cursor pointer
        box-shadow inset 2px 2px 2px #000

        .backcolor
            display none


#notifications-container
    position relative
    padding 0

    a
        color darkblue

    .badge
        padding 1px 2px 1px 3px
        position absolute
        top 2px
        right 2px

    .badge:empty
        display none

    #clickcatcher
        position fixed
        width 100%
        height 100%
        background-color red
        opacity 0.001
        top 40px
        left -420px
        z-index 10


#notifications
    position fixed
    right 0
    top 36px
    bottom 100px
    padding 5px
    width 420px
    z-index 50
    color white
    text-align left
    background #333
    overflow-y auto

    ul
        margin 0
        padding 10px

        li
            list-style-type none
            border-bottom 1px solid #555
            padding 10px 0

    .separator
        border-bottom 1px solid #338CF7 + 30%

    .notification:hover
        a.dismiss
            cursor pointer
            display inline
            opacity 1

        a.dismiss:hover
            color orange

    .notification

        .notification-date
            color #CCC
            font-size 12px

        a.dismiss
            display none
            float right
            line-height 20px
            padding 5px
            color #338CF7

        a.doaction
            display none
            color white
            cursor pointer
            margin-top 5px
            font-size 12px
            padding 3px
            background #338CF7
            text-align center

            &:hover
                background orange + 10%

        &:hover
            a.doaction
                display block


#notifications-buttons
    position fixed
    bottom 0px
    right 0px
    height 100px
    width 420px
    padding 10px
    z-index 50
    overflow-y none
    background #333

    #dismiss-all.btn
        display block
        text-align center
        background-color #338CF7
        margin-bottom 10px
        cursor pointer
        font-size 16px
        padding 5px
        width 100%

        &:hover
            background-color orange + 10%

    #logout-button.btn
        display block
        text-align center
        background-color #338CF7
        cursor pointer
        font-size 16px
        padding 5px
        width 100%

        &:hover
            background-color orange + 10%


@media screen and (-webkit-min-device-pixel-ratio: 0)

    #menu-applications-toggle
        span
            padding-top 10px

/** Applications */

#app-list
    margin auto
    max-width 720px
    padding-bottom 20px

    .preview-holder
        padding 10px
        display block
        list-style-type none
        background-color orange

    section
        background rgba(255, 255, 255, 0.8)
        border-radius 15px
        display none
        padding 0px 12px 0px

        &.show
            display block

        h2
            font-size 16px
            text-transform uppercase
            color darkgrey
            background-color transparent
            padding 20px 10px 0px 18px
            margin-top 20px
            margin-bottom 0px


.application
    cursor pointer
    padding 10px

    .application-inner
        padding-top 5px
        border-radius 200px
        padding 20px 10px

        .vertical-aligner
            height 100%
            width 100%

        img.icon
            height auto
            display block
            padding 20px
            margin 0px auto 2% auto
            text-align center
            border-radius 200px
            margin-bottom 10px
            width 100%
            transition background 0.2s ease

        img.spinner
            border-radius 200px
            display block
            background-position center
            width 100%
            margin-bottom 10px
            margin-top 0px

        p
            margin 0
            font-family 'Source Sans Pro', sans-serif
            color textcolor

        .app-title
            height 20%

            text-align center
            font-family 'Source Sans Pro', sans-serif
            text-transform uppercase
            font-size 15px
            color darkblue
            text-decoration none
            margin-top 2px

        .state-label
            font-size 18px
            font-weight normal
            color red

    &:active
        box-shadow none

    &.broken
        .broken-notifier
            display block

.platform-app
    .application-inner
        img
            padding 25px
            border-radius 100px
            background #338CF7 + 20%

        &:hover
            img
                background orange + 20%
                border-radius 100px

.app-tools
    width 50%
    margin-left auto
    margin-right auto
    margin-top 12px
    color text-color
    text-align center
    margin-bottom 20px

#no-app-message
    margin auto
    margin-top 30px
    width 80%
    background white
    border-bottom-left-radius 5px
    border-bottom-right-radius 5px
    padding-bottom 20px

    #start-title
        padding 20px
        font-size 28px
        margin-bottom 30px

        img
            float left

    p
        padding-left 20px
        padding-right 20px

    img
        width 32px
        margin-right 10px

    img.logo
        width auto

    a
        border-bottom 0

.darkbg
    background darkblue
    //background orangewhite - 40%
    color white

.section-title
    background darkblue
    color white
    padding 5px 20px
    position absolute
    top 0
    margin auto

.install-info
    width 40%
    text-align center


// Account page

#account-view

