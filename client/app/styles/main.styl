#help-view
    p
        margin 0
        margin-bottom 0

    p.mt2
        margin-top 20px

    p.help-text
        font-size 20px
        text-align left

    .help-section
        height 100%
        background rgba(255, 255, 255, 0.95)
        .w50
            padding 30px

    .alert
        margin-top 10px

#home-view
    overflow hidden
    background bgcolor
    width 100%
    height 100%
    padding 0
    margin 0

.app-introduction
    margin-top 60px
    margin-bottom 20px

// MARKET PAGE

#your-app
    box-sizing border-box
    width 99%

    p
        margin-bottom 0

    .text
        padding 20px


    .add-app-field
        display flex
        justify-content flex-end
        align-items stretch
        max-width 800px

        #app-git-field
            text-align left
            box-sizing border-box
            width 100%
            font-size 24px
            padding 10px

        .btn
            width 60px

    .error
        box-sizing border-box
        width 100%
        max-width 615px
        margin-top 10px
        font-size 0.8em
        padding 5px

#app-market-list
    box-sizing border-box
    margin-top 20px

    .app-install-button
        button
        div
            display inline

        .app-text
            padding 10px
            word-wrap normal
            overflow-x hidden

        .app-text p
            margin-right 20px

        .app-install
            border 0
            outline 0
            font-weight bold
            color orange - 10%
            box-shadow none
            font-size 0.8em
            padding 4px 8px
            float right

        .app-install-text
            display none
            float right
            font-size 0.8em
            padding 4px
            padding-left 8px
            cursor pointer
            font-weight bold
            color orange - 10%
            box-shadow none
            height 20px


#market-view
    height 100%

#market-applications-list
    display         flex
    flex-wrap       wrap
    justify-content space-between

#market-view #no-app-message,
.cozy-app
