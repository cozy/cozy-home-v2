/** Notifications */

#menu-applications-toggle
    height: 46px
    line-height: 42px
    font-size: 42px
    margin-left: 5px
    padding-left: 5px
    padding-right: 5px
    cursor: pointer
    color: white

    #current-application
        font-weight: normal
        opacity: 0.5

    #current-application:active
        color: white

    #current-application:hover
        color: white
        opacity: 1

    span
        font-size: 28px
        padding-top: 5px

#menu-applications-container.active
    #menu-applications-toggle
        background: rgba(20, 20, 22, 0.3)
        cursor: pointer
        box-shadow: inset 2px 2px 2px #000
        height: 42px
        line-height: 42px
        font-size: 42px

        span
            margin-top: 2px

#menu-applications-container
    position: relative

    .clickcatcher
        position fixed
        width 100%
        height 100%
        background-color red
        opacity 0.001
        top 40px
        left 0px
        z-index 40

    #menu-applications
        display: none
        position: absolute
        left: 5px
        top: 48px
        width: 220px
        z-index: 50
        margin: 0
        list-style-type: none
        padding: 5px
        color: darkblue

        text-align: left
        background: lightgrey - 10%
        border: 1px solid lightgrey - 20%
        //box-shadow 1px 1px 2px #CCC

        .menu-application
            text-transform: lowercase

            a
                display:block
                width: 100%
                color: darkblue
                cursor: pointer

        .menu-application:hover
            background: #fce9d5

#notifications-toggle
    height: 45px
    line-height: 45px
    font-size: 45px
    width: 60px
    cursor: pointer
    margin-left: 10px
    margin-top: 0
    padding-top: 0
    padding-left: 5px
    padding-right: 10px
    transition: all 0.3s
    position: relative
    transition: all 0.3s

    img
        padding: 0
        margin: 0

    #notifications-counter
        height 20px
        top 5px
        right 2px
        line-height 20px
        padding 0 3px
        text-align center
        border none
        background #d9534f
        color #fff
        position absolute
        font-size 15px
        border-radius 10px
        border 2px solid #363a46

        &:empty
            padding 0

    .backcolor
        position absolute
        top 15px
        left 12px
        border-radius 10px
        z-index -1
        display block
        background-color white
        width 20px
        height 20px
        opacity 0
        transition all 0.3s

    &:hover
        background: rgba(220, 220, 222, 0.3)

#notifications-toggle.highlight
    img
        opacity: 1

.active
    #notifications-toggle
        background: rgba(20, 20, 22, 0.3)
        //height: 47px
        //line-height: 47px
        //font-size: 47px
        margin-top: 0
        cursor: pointer
        box-shadow: inset 2px 2px 2px #000
        .backcolor
            display none


#notifications-container
    position: relative
    padding: 0

    a
        width: 20px
        color: darkblue

    .badge
        padding: 1px 2px 1px 3px
        position: absolute
        top: 2px
        right: 2px

    .badge:empty
        display: none

    #clickcatcher
        position fixed
        width 100%
        height 100%
        background-color red
        opacity 0.001
        top 40px
        left 0px
        z-index 40

    #notifications
        z-index: 50
        display: none
        position: absolute
        top: 48px
        right: 0px
        width: 420px
        list-style-type: none
        margin: 0
        padding: 5px

        text-align: left
        background: lightgrey - 10%
        border: 1px solid lightgrey - 20%
        //box-shadow 1px 1px 2px #CCC

        #dismiss-all
            text-align center
            background-color orangewhite - 20%
            margin-top 5px
            padding-top 5px
            clear both
            line-height 25px
            color black
            cursor pointer

            &:hover
                background-color orange + 20%
                color black

        .notification:hover
            a.dismiss
                cursor: pointer
                display: inline
                color: darkblue

            a.dismiss:hover
                opacity: 1

        .notification
            a.dismiss
                display: none
                float: right
                line-height 20px
                padding 5px
                opacity: 0.5

            a.doaction
                float: left
                line-height 20px
                padding 5px
                color: darkblue
                max-width: 360px
                width: 360px
                cursor: pointer

            &.new
                background: #8f9b9b + 20%
            &.transition
                background-color: #8f9b9b
                transition: background-color 3s

