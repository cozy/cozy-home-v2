    width 49.2%
    height 11em
    margin-top 1em
    background lightgrey
    border-bottom 1px solid lightgrey - 10%
    border-right 1px solid lightgrey - 10%
    cursor pointer
    text-align left
    transition background 0.3s ease-out

    &.install
        .app-text
            h3, span, p
                opacity 0.4

        .installing-label
            display inline

    .installing-label
        display none
        margin-bottom 10px

    h3
        margin-top     2.5rem
        margin-bottom  0
        padding-bottom 0
        font-size      1.4em
        line-height    3.4rem

        span.beta
            margin-left      0.8em
            padding          0.2em 0.5em
            background-color #ea202d
            border-radius    10em
            vertical-align   middle
            color            #fff
            font-size        0.5em
            font-style       italic
            font-weight      normal

    .comment
        font-size  1em
        font-style italic
        color      #999

    p.par2
        margin-top 0.25em

    .btn
        float right
        margin 10px 10px 10px 10px

    .app-img
        text-align center
        vertical-align center
        box-sizing border-box
        width 180px
        height 180px
        padding 25px 20px 10px 25px

        img.svg
            border-radius 200px
            display block
            background-position center
            width 130px
            height 130px
            margin 0

    .img-btn
        width 24px
        opacity 0.3
        margin 10px 5px
        display none

    .img-btn:hover
        opacity 1
        cursor pointer

.cozy-app
    &:hover
        background lightgreyblue

        .right
            display inline

        .img-btn
            display inline

    &.official
        background lightgreyblue
        border-color lightgreyblue - 10%

        &:hover
            background lightgreyblue - 5%


